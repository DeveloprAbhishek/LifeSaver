<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masai.lifesaver">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <application
        android:name=".RideSharingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LifeSaver">
        <activity
            android:name=".ui.activity.BookingDetailsActivity"
            android:exported="true" >

        </activity>

        <activity
            android:name=".ui.activity.BookAmbulance"
            android:exported="true" />
        <activity
            android:name=".ui.activity.userhome.UserHomeActivity"
            android:exported="true"
            android:label="@string/title_activity_user_home">

        </activity>

        <activity
            android:name=".ui.activity.BookingRecords"
            android:exported="true">

        </activity>
        <activity
            android:name=".ui.activity.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.DriverActivity"
            android:exported="true" />
        <activity
            android:name=".ui.loginpackage.InstantActionActivity"
            android:exported="true" >

        </activity>
        <activity
            android:name=".ui.activity.AssociateActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.PatientActivity"
            android:exported="true" />
        <activity
            android:name=".ui.activity.EmergencyActivity"
            android:exported="true">

        </activity>
        <activity
            android:name=".ui.activity.HomeActivity"
            android:exported="true" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>